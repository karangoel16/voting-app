 <% include layout %>
	<body>
	<script>
	function test(postid,optionid){
		console.log(postid);
		console.log(optionid);
		$.ajax({
			type:"POST",
			url:"/update_post",
			data:{
				postId:postid,
				optionId:optionid
			},
			success:function(res)
				{
					console.log("test success");
					$(document).ajaxStop(function() { location.reload(true); });
				},
			error:function(err)
			{
				console.log(err);
			}
		});
	}
	</script>
	<h1></h1><br>
	<div class="jumbotron">
	<p><%= Post[0].val %></p>
	<ul class="list-group">
	<%Post[0].option.forEach(function(post){%>
		<li class="list-group-item">
		<div class="btn btn-primary" onclick="test('<%=Post[0]._id%>','<%=post._id%>')">
		<%=post.name%>
		</div><%=post.click%><br>
		
	<%})%>
	</ul>
	</div>
	</body>