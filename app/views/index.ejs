 <% include layout %>
 	<script>
 		function del(postId){
 			var r=confirm("Do you want to delete this link "+postId+"?");
 			if(r==false)
 			{
 				return ;
 			}
 			$.ajax({
 				type:'POST',
 				url:'/deletepost',
 				data:{
 					postId:postId
 				},
 				success:function(){
 					console.log("Deleted");
 					$(document).ajaxStop(function() { location.reload(true); });
 				},
 				error:function(err)
 				{
 					console.log(err);
 				}
 			});
 			//console.log("Post marked for deletion");
 		}
 	</script>
 	<body>
		<div class="container">
			<br />
			<p class="clementine-text">Voting-App</p>
			<center><div class="btn btn-primary">
				<i class="fa fa-twitter"><a href="/postadd"></i>ADD POST</i></a>
			</div></center>
		</div>
		<ul class="list-group">
		<% posts.forEach(function(post){%>
			<div>
				<li class="list-group-item"><%= post.val %>&nbsp&nbsp<%=post._id%><button class="btn btn-danger" onclick="del('<%=post._id%>')">Delete</button><br>
			</div>
		<%}) %>
		</ul>
	</body>

</html>